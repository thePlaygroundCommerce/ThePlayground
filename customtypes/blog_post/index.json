{
  "format": "page",
  "id": "blog_post",
  "label": "Blog Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Catch Hook": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "title",
          "placeholder": ""
        }
      },
      "headline": {
        "type": "Text",
        "config": {
          "label": "headline",
          "placeholder": ""
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "hero": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    },
    "Main": {
      "sections": {
        "type": "Group",
        "config": {
          "label": "sections",
          "repeat": true,
          "fields": {
            "heading": {
              "type": "Text",
              "config": {
                "label": "heading",
                "placeholder": ""
              }
            },
            "paragraph": {
              "type": "StructuredText",
              "config": {
                "label": "paragraph",
                "placeholder": "",
                "allowTargetBlank": true,
                "multi": "paragraph,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl,preformatted"
              }
            },
            "image": {
              "type": "Image",
              "config": {
                "label": "image",
                "constraint": {},
                "thumbnails": []
              }
            }
          }
        }
      }
    }
  }
}
